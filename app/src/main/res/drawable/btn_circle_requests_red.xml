<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape
            android:shape="oval">

            <gradient
                android:angle="45"
                android:endColor="#e21912"
                android:startColor="#c98546" />

            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape
            android:shape="oval">

            <solid
                android:color="#FFA000"/>

            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>
    </item>



</selector>
