<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/shareCardView"
        android:layout_width="330dp"
        android:layout_height="122dp"
        android:layout_margin="4dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/itemShareProfile"
                android:layout_toRightOf="@+id/itemShareTimer"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/facebook_profile_example"
                app:siBorderColor="@color/blackLight"
                />


            <TextView
                android:id="@+id/itemShareName"
                android:layout_toRightOf="@+id/itemShareProfile"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="Azad HUMBATLI"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/itemShareDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemShareName"
                android:layout_toRightOf="@+id/itemShareProfile"
                android:text="500 meter away"
                android:textStyle="bold"
                android:textColor="@color/blackLight"
                />


            <TextView
                android:id="@+id/itemShareTimer"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="12:33"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/bg_rounded_share_timer"
                />


            <com.hmbtl.locationparking.views.ProgressButton
                android:id="@+id/itemShareSendRequestButton"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/itemShareTimer"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemShareProfile"
                android:elevation="5dp"
                android:textSize="12sp"
                android:textColor="@color/blackLight"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/send_request"
                android:background="@drawable/btn_black_bordered"
                />




        </RelativeLayout>




    </android.support.v7.widget.CardView>



</RelativeLayout>